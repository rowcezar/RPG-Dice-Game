package {	public class Requerimento	{		private var X:int;		private var Y:int;		private var A:int;		private var B:int;		private var Result:Boolean;		public function RequerimentoMenor():Boolean		{			if (X < Y)			{				Result = true;			}			else			{				Result = false;			}			return Result;		}		public function RequerimentoMaior():Boolean		{			if (X > Y)			{				Result = true;			}			else			{				Result = false;			}			return Result;		}		public function RequerimentoIqual():Boolean		{			if (X == Y)			{				Result = true;			}			else			{				Result = false;			}			return Result;		}		public function RequerimentoDiferente():Boolean		{			if (X != Y)			{				Result = true;			}			else			{				Result = false;			}			return Result;		}		public function RequerimentoDeUmAOutro():Boolean		{			if (X >= A && X <= B)			{				Result = true;			}			else			{				Result = false;			}			return Result;		}		public function RequerimentoMira():Boolean		{			if (Y == X || Y == X-1 || Y == X+1)			{				Result = true;			}			else			{				Result = false;			}			return Result;		}		public function RequerimentoNumeroEspecifico():Boolean		{			if (X == A)			{				Result = true;			}			else			{				Result = false;			}			return Result;		}	}}